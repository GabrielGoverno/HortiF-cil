<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.hortifacil.controller.ListaPedidosController">

    <Button fx:id="btnVoltarHome" text="Voltar" onAction="#btnVoltarHome" />

 <TableView fx:id="tablePedidos" prefHeight="400" prefWidth="800">
    <columns>
        <TableColumn fx:id="colNumeroPedido" text="Número do Pedido" />
        <TableColumn fx:id="colDataPedido" text="Data do Pedido" />
        <TableColumn fx:id="colValorTotal" text="Valor Total" />
        <TableColumn fx:id="colStatus" text="Status" />
        <TableColumn fx:id="colAcoes" text="Ações" />
    </columns>
</TableView>

</VBox>