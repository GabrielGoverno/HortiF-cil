<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      alignment="CENTER"
      spacing="25"
      prefWidth="500" prefHeight="450"
      styleClass="root-pane"
      style="-fx-padding: 40; -fx-border-radius: 15; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(65,105,30,0.15), 12,0,0,3);">

    <!-- Logo -->
    <ImageView fitHeight="140" fitWidth="140" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@/Imagens/logo.png"/>
        </image>
    </ImageView>

    <!-- Título -->
    <Label text="HortiFácil V.1.0"
           style="-fx-font-size: 32px; -fx-font-weight: 800; -fx-text-fill: #356633; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 2,0,0,1);"/>

    <!-- Subtítulo -->
    <Label text="Carregando, por favor aguarde..."
           style="-fx-font-size: 16px; -fx-text-fill: #5a7a3c; -fx-font-style: italic;"/>

    <!-- Barra de progresso -->
    <ProgressIndicator progress="-1.0" prefWidth="60" prefHeight="60" style="-fx-accent: #4caf50;"/>

</VBox>
